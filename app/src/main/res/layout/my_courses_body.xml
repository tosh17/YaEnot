<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_round_top_20">

    <TextView
        android:id="@+id/tv_current_topic"
        style="@style/Title.Title5_20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:text="Текущий урок"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/secondary_light"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_current_topic">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_open_book"
                android:layout_width="18.3dp"
                android:layout_height="18.3dp"
                android:layout_marginStart="21.3dp"
                android:src="@drawable/ic_open_book"
                app:layout_constraintBottom_toBottomOf="@id/tv_progress"
                app:layout_constraintEnd_toStartOf="@id/tv_progress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_progress"
                app:tint="@color/primary_default" />

            <TextView
                android:id="@+id/tv_progress"
                style="@style/Footnote.Footnote_Reg_14sp"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="26dp"
                android:text="Урок 4 из 5"
                app:layout_constraintStart_toEndOf="@id/iv_open_book"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/Title.Title5_20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="65dp"
                android:text="Сценарное мастерство JS"
                app:layout_constraintTop_toBottomOf="@id/tv_progress" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="26dp"
                android:text="Продолжить обучение"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>