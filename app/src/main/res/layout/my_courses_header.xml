<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#323648">

    <TextView
        android:id="@+id/course_title"
        style="@style/Title.Title4_24sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:text="Курс: Веб разработчик"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/course_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/course_title" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:progress="5"
        app:indicatorColor="@color/primary_default"
        app:layout_constraintTop_toBottomOf="@id/course_title"
        app:trackColor="#494F6A"
        app:trackCornerRadius="8dp" />

    <TextView
        android:id="@+id/tv_progress"
        style="@style/Footnote.Footnote_Reg_14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Уроков окончено"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/progress_indicator"
        app:layout_constraintTop_toBottomOf="@id/progress_indicator" />

    <TextView
        android:id="@+id/tv_progress_prop"
        style="@style/Footnote.Footnote_Reg_14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="4/50"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/progress_indicator"
        app:layout_constraintTop_toBottomOf="@id/progress_indicator" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/Button.Dark"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:text="Все курсы"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>