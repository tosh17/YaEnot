<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_alert_dialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            style="@style/Title.Title5_20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/log_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_end_cancel_icon_auth_dialog"
            android:src="@drawable/ic_cancel_icon"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_main_auth_dialog"
            android:layout_marginTop="16dp"
            android:text="@string/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_main_auth_dialog"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_main_auth_dialog"
            android:background="@drawable/background_image_shape_auth"
            app:boxCornerRadiusBottomEnd="@dimen/box_corner_radius_edit_text"
            app:boxCornerRadiusBottomStart="@dimen/box_corner_radius_edit_text"
            app:boxCornerRadiusTopEnd="@dimen/box_corner_radius_edit_text"
            app:boxCornerRadiusTopStart="@dimen/box_corner_radius_edit_text"
            app:boxStrokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/background_image_shape_auth" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_main_auth_dialog"
            android:layout_marginTop="12dp"
            android:text="@string/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_input_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_main_auth_dialog"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_main_auth_dialog"
            app:boxCornerRadiusBottomEnd="@dimen/box_corner_radius_edit_text"
            app:boxCornerRadiusBottomStart="@dimen/box_corner_radius_edit_text"
            app:boxCornerRadiusTopEnd="@dimen/box_corner_radius_edit_text"
            app:boxCornerRadiusTopStart="@dimen/box_corner_radius_edit_text"
            app:boxStrokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_text_view">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_image_shape_auth"
                android:drawableEnd="@drawable/ic_visible_icon"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forget_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/margin_main_auth_dialog"
            android:text="@string/forger_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/log_in_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_main_auth_dialog"
            android:text="@string/log_in"
            android:theme="@style/Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forget_password_text_view" />

        <View
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_main_auth_dialog"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/or_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/log_in_btn" />

        <TextView
            android:id="@+id/or_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/or"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_in_btn" />

        <View
            android:layout_width="130dp"
            android:layout_height="1dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin_main_auth_dialog"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/or_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/log_in_btn" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="@dimen/margin_main_auth_dialog"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_image_shape_auth"
            android:paddingStart="40dp"
            android:paddingTop="26dp"
            android:paddingEnd="40dp"
            android:paddingBottom="26dp"
            android:src="@drawable/ic_google_icon"
            app:layout_constraintEnd_toStartOf="@id/facebook_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/or_text_view" />

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_image_shape_auth"
            android:paddingStart="40dp"
            android:paddingTop="26dp"
            android:paddingEnd="40dp"
            android:paddingBottom="26dp"
            android:src="@drawable/ic_facebook_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/or_text_view" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin_main_auth_dialog"
            android:background="@drawable/background_image_shape_auth"
            android:paddingStart="40dp"
            android:paddingTop="26dp"
            android:paddingEnd="40dp"
            android:paddingBottom="26dp"

            android:src="@drawable/ic_vk_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/facebook_icon"
            app:layout_constraintTop_toBottomOf="@+id/or_text_view" />

        <TextView
            android:id="@+id/sign_in_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="30dp"
            android:text="@{@string/you_havent_acc_str(@string/sign_in)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facebook_icon"
            tools:text="У вас нет аккаунта? Зарегистрироваться" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>