<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_profession_card"
    android:layout_marginBottom="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageProfessionView"
        android:layout_width="310dp"
        android:layout_height="190dp"
        android:background="@drawable/bg_profession_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/black"
        android:paddingVertical="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageProfessionView"
        app:layout_constraintStart_toStartOf="@id/imageProfessionView"
        style="@style/Title.Title5_20sp"
        tools:text="Web developer"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeInMonthView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        app:layout_constraintStart_toStartOf="@id/titleView"
        style="@style/Footnote.Footnote_Reg_14sp"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/ic_calendar"
        android:drawablePadding="6dp"
        tools:text="10 месяцев"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeInHoursView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/timeInMonthView"
        app:layout_constraintStart_toEndOf="@id/timeInMonthView"
        style="@style/Footnote.Footnote_Reg_14sp"
        android:layout_marginStart="10dp"
        android:paddingBottom="20dp"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="6dp"
        tools:text="100 часов"/>


</androidx.constraintlayout.widget.ConstraintLayout>
