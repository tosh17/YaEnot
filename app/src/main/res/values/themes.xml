<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--    Typography-->
    <style name="Title">
        <item name="android:fontFamily">@font/ystext_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.Title1_48sp">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Title.Title2_34sp">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Title.Title3_28sp">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Title.Title4_24sp">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Title.Title5_20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Headline">
        <item name="android:fontFamily">@font/suisse_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Headline.Headline_17sp">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body.Body_Medium_16sp">
        <item name="android:fontFamily">@font/suisse_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body.Body_Reg_16sp">
        <item name="android:fontFamily">@font/suisse_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Footnote">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Footnote.Footnote_SBold_14sp">
        <item name="android:fontFamily">@font/suisse_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Footnote.Footnote_Reg_14sp">
        <item name="android:fontFamily">@font/suisse_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Footnote.Footnote_SBold_12sp">
        <item name="android:fontFamily">@font/suisse_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Footnote.Footnote_Reg_12sp">
        <item name="android:fontFamily">@font/suisse_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Caption.Caption_SBold_10sp">
        <item name="android:fontFamily">@font/suisse_semibold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Caption.Caption_Reg_10sp">
        <item name="android:fontFamily">@font/suisse_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Button">
        <item name="android:textAppearance">@style/Body.Body_Medium_16sp</item>
        <item name="android:backgroundTint">@color/primary_default</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:backgroundTint">@color/secondary_light</item>
        <item name="android:background">@drawable/btn_background_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>